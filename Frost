local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local models = {
    {name = "LeftLegIce.rbxm", url = "https://github.com/atlbfrisk/New-start/raw/refs/heads/main/LeftLegIce.rbxm", limb = "Left Leg"},
    {name = "LeftArmIce.rbxm", url = "https://github.com/atlbfrisk/New-start/raw/refs/heads/main/LeftArmIce.rbxm", limb = "Left Arm"},
    {name = "TorsoIce.rbxm", url = "https://github.com/atlbfrisk/New-start/raw/refs/heads/main/TorsoIce.rbxm", limb = "Torso"},
    {name = "HeadIce.rbxm", url = "https://github.com/atlbfrisk/New-start/raw/refs/heads/main/HeadIce.rbxm", limb = "Head"},
}

for _, data in ipairs(models) do
    writefile(data.name, game:HttpGet(data.url))

    local obj = game:GetObjects(getcustomasset(data.name))[1]
    obj.Parent = character

    local limb = character:FindFirstChild(data.limb)
    if not limb or not limb:IsA("BasePart") then continue end

    local part
    if obj:IsA("BasePart") then
        part = obj
    else
        part = obj:FindFirstChildWhichIsA("BasePart")
    end
    if not part then continue end

    part.Anchored = false
    part.CanCollide = false
    limb.Anchored = false

    -- === ПОЗИЦИОНИРОВАНИЕ ===
    if data.limb == "Torso" then
        part.CFrame = limb.CFrame * CFrame.new(-0.56, 0.2, 0)

    elseif data.limb == "Head" then
        part.CFrame = limb.CFrame * CFrame.new(-0.23, 0.19, 0)

    elseif data.limb == "Left Arm" then
        part.CFrame = limb.CFrame * CFrame.new(0, 0.2, 0)

    elseif data.limb == "Left Leg" then
        part.CFrame = limb.CFrame * CFrame.new(0, 0, 0)

    else
        part.CFrame = limb.CFrame
    end

    local weld = Instance.new("WeldConstraint")
    weld.Part0 = limb
    weld.Part1 = part
    weld.Parent = limb
end

wait (2)

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Путь к мечу текущего игрока
local swordPath = workspace:WaitForChild("Players")
    :WaitForChild(player.Name)
    :WaitForChild("GTSword")
    :WaitForChild("Sword")

-- Изменяем цвет и материал
swordPath.Color = Color3.fromRGB(0, 255, 255) -- голубой
swordPath.Material = Enum.Material.CrackedLava

wait(1)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local shield = workspace:WaitForChild("Players")
    :WaitForChild(player.Name)
    :WaitForChild("GTShield")
    :WaitForChild("Shield")

shield.Color = Color3.fromRGB(0, 170, 255)  -- голубой (можешь заменить)
shield.Transparency = 0.6
shield.Size = Vector3.new(0.7, 3.5, 2.5)
wait(1)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- TextLabel
local textLabel = workspace:WaitForChild("Players")
    :WaitForChild(player.Name)
    :WaitForChild("Head")
    :WaitForChild("Display")
    :WaitForChild("Frame")
    :WaitForChild("TextLabel")

textLabel.Text = player.Name  -- ставим имя
textLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
wait(1)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local bar = workspace.Players[player.Name]
    .Head.Display.Frame.Ext1.Bar

bar.BackgroundColor3 = Color3.fromRGB(0, 255, 255)

wait(1)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local uiGradient = workspace.Players[player.Name]
    .Head.Display.Frame.Health.Bar:WaitForChild("UIGradient")

-- Настраиваем плавный градиент
uiGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 0, 0)),       -- начало черное
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 255))    -- конец голубой
})

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local bar = workspace.Players[player.Name]
    .Head.Display.Frame.Health.Bar

bar.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
